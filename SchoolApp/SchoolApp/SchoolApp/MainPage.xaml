<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SchoolApp"
             x:Class="SchoolApp.MainPage"
             Title="Course Material">

    <StackLayout Padding="5,5,5,5">
        <Label Text="Loading..." IsVisible="{Binding Courses.IsNotCompleted}"/>
        <ContentView IsVisible="{Binding Courses.IsSuccessfullyCompleted}">
            <ListView ItemsSource="{Binding Courses.Result}" HasUnevenRows="True" ItemTapped="Sign_Up">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Course}" FontSize="Medium" ClassId="{Binding PartitionKey}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ContentView>
    </StackLayout>
</ContentPage>
